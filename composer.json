{
    "name": "zennit/abac",
    "description": "Attribute-Based Access Control (ABAC) for Laravel",
    "version": "2.8.1",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "abac",
        "access-control",
        "authorization",
        "permissions"
    ],
    "homepage": "https://github.com/somethim/abac",
    "support": {
        "issues": "https://github.com/somethim/abac/issues",
        "source": "https://github.com/somethim/abac"
    },
    "readme": "README.md",
    "authors": [
        {
            "name": "zennit",
            "email": "contact@zennit.dev",
            "homepage": "https://zennit.dev"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.2"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "phpunit/phpunit": "^11.5",
        "orchestra/testbench": "^9.8",
        "mockery/mockery": "^1.6",
        "phpbench/phpbench": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "zennit\\ABAC\\": "src/",
            "zennit\\ABAC\\Database\\Factories\\": "database/factories/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "zennit\\ABAC\\Providers\\AbacServiceProvider"
            ],
            "config": {
                "abac": "config/abac.php"
            },
            "aliases": {
                "Abac": "zennit\\ABAC\\Facades\\Abac"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": [
            "docker exec abac php vendor/bin/phpunit --coverage-html coverage"
        ],
        "version-patch": [
            "php -f scripts/version.php patch"
        ],
        "version-minor": [
            "php -f scripts/version.php minor"
        ],
        "version-major": [
            "php -f scripts/version.php major"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/somethim/abac"
        }
    ]
}
